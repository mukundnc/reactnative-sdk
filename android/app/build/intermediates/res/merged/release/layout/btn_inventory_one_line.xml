<?xml version="1.0" encoding="utf-8"?>
<com.usebutton.sdk.internal.views.OneLineInventoryView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="Overdraw"
    tools:background="#f00"
    android:background="@drawable/btn_background_white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal"
        android:gravity="center_vertical|left"
        android:padding="@dimen/btn_promo_card_padding"
        >

        <com.usebutton.sdk.internal.views.AssetImageView
            android:id="@+id/inventory_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            tools:src="@drawable/btn_ic_app_button"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/inventory_primary"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/btn_promo_card_padding"
            android:layout_weight="1"
            tools:text="See more on OpenTable"
            style="@style/BtnCardText"
            />


    </LinearLayout>

</com.usebutton.sdk.internal.views.OneLineInventoryView>
