<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:button="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/btn_white"
    android:layout_height="match_parent"
    >

    <com.usebutton.sdk.ButtonDropin
        android:id="@+id/test_dropin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        button:btn_buttonId="test-placement"
        button:btn_paddingLeft="5dp"
        button:btn_paddingTop="15dp"
        button:btn_paddingRight="20dp"
        button:btn_paddingBottom="10dp"
        />

    <com.usebutton.sdk.ButtonDropin
        android:id="@+id/test_dropin_tag"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:tag="button:buttonId=test-placement"
        />

    <com.usebutton.sdk.ButtonDropin
        android:id="@+id/test_dropin_styled"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:ignore="PxUsage"
        android:tag="button:buttonId=test-placement"
        button:btn_paddingLeft="20px"
        button:btn_paddingTop="21px"
        button:btn_paddingRight="22px"
        button:btn_padding="7px"
        button:btn_drawablePaddingLeft="10px"
        button:btn_drawablePaddingTop="11px"
        button:btn_drawablePaddingRight="12px"
        button:btn_drawablePadding="5px"
        />

    <com.usebutton.sdk.InteractiveButton
        android:layout_width="match_parent"
        android:id="@+id/test_interactive"
        android:layout_height="wrap_content"
        />

</LinearLayout>
