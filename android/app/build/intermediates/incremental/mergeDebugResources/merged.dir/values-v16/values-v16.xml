<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BtnCardAction" parent="android:Widget.Button">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/btn_background_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/btn_promo_action_padding</item>
    </style>
    <style name="BtnCardText">
        <item name="android:textColor">@color/btn_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="BtnCardText.Dark.Small">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="BtnCardText.Dark.Small.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="BtnCardText.Small">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="BtnCardText.btn_charcoal">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/btn_charcoal</item>
    </style>
    <style name="BtnCardText.btn_charcoal.Small">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="BtnCardText.btn_charcoal.Small.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="BtnDropinButton">
        <item name="btn_textSize">15sp</item>
        <item name="btn_iconSize">18dp</item>
        <item name="btn_drawablePadding">5dp</item>
        <item name="btn_padding">10dp</item>
        <item name="btn_gravity">left|center_vertical</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="btn_interactionDisabled">false</item>
    </style>
</resources>